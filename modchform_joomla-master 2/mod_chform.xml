<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="3.6"
	client="site"
	method="upgrade">
	<name>chform</name>
	<author>Fohrer Steve</author>
	<license>GNU General Public License version 2 or later</license>
	<version>1.0</version>
	<description>Formulaire de candidatures spontanés</description>

	<files>	
	<filename module="mod_chform">mod_chform.php</filename>
	<filename>index.html</filename>
	<filename>mod_chform.php</filename>
	<filename>mod_chform.xml</filename>
    <filename>helper.php</filename>
    <folder>assets</folder>
	<folder>tmpl</folder>
    </files>


    <config>

    	<fields name="params">
    		<fieldset name="basic">
    			<field name="Champ nom" type="text" translate_default="true" size="10" />
    			<field name="Champ prénom" type="text" translate_default="true" size="10" />
    			<field name="Champ adresse" type="text" translate_default="true" size="10" />
    			<field name="Champ ville" type="text" translate_default="true" size="10" />
    			<field name="Champ code postal" type="text" translate_default="true" size="10" />
    			<field name="Champ téléphone" type="text" translate_default="true" size="10" />
    			<field name="Champ téléphone portable" type="text" translate_default="true" size="10" />
    			<field name="Champ adresse mail" type="text" translate_default="true" size="10" />
    			<field name="Champ emploi" type="text" translate_default="true" size="10" />
    			<field name="Champ type" type="text" translate_default="true" size="10" />
                <field name="Champ salaire" type="text" translate_default="true" size="10" />
    			<field name="Champ motivation" type="text" translate_default="true" size="10" />
    			<field name="Champ commentaire" type="text" translate_default="true" size="10" />
                <field name="Champ CV" type="text" translate_default="true" size="10" />
                <field name="Champ lettre de motivation" type="text" translate_default="true" size="10" />
                <field name="Destinataire du mail" type="text" translate_default="true" size="10" />
                <field name="Sujet du mail" type="text" translate_default="true" size="10" />
    			<field name="Bouton" type="text" translate_default="true" size="10" />

    		</fieldset>
    	</fields>


    </config>



</extension>
